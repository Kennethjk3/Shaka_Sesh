<% @meets.each do |meet| %>
	<a href="<%= meet_path(meet.id)%>">
	<section class="form-group">
		<div class="meet-heading">
			<h4><%= meet.name.capitalize %></h4>
		</div>
	</a>
	<div class="meet-content">
		<p><%= meet.description %></p>
		<p class="creator-name">By <%=meet.name %></p>
			<ul>
				<li>
					<i class="icon fa fa-map-marker"></i><span><%= meet.address %></span>
				</li>
				<li>
					<i class="icon fa fa-calendar-o"></i><span> <%= meet.meet_date%> at <%=meet.meet_time %> </span>
				</li>
			</ul>
	</div>
	</section>
<% end %>
