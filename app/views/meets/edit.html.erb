<% provide(:name, "Edit") %>
<div class="form-group">
	<div class="col-sm-8 col-sm-offset-2">
		<div class="well well-lg">
			<h2>Edit Meet-Up</h2>
			<%= form_for(@meet) do |f| %>

				<%= f.label :name %>
				<%= f.text_field :name, class: "form-control", autofocus: true %>

				<%= f.label :description %>
				<%= f.text_area :description, class: "form-control", :size => "20x5" %>

				<%= f.label :address %>
				<%= f.text_field :address, class: "form-control" %>

				<div class="row">
					<div class="col-sm-4">

					<%= f.label "Date" %>
					<div class="input-group date">
						<%= f.text_field :meet_date, :value => @meet.meet_date.strftime("%d/%m/%Y"), class: "form-control" %><span class="input-group-addon"><i class="fa fa-calendar"></i></span>
					</div>
					</div>
					<div class="col-sm-4 col-sm-offset-1">
						<%= f.label "Start Time" %>
						<div class="input-group">
						<%= f.text_field :meet_time, :value => @meet.meet_time.strftime("%H:%M"), class: "time ui-timepicker-input form-control", placeholder: "15:00" %><span class="input-group-addon"><i class="fa fa-clock-o"></i></span>
						</div>
					</div>

				</div>


				<div class="row create-bottom">
					<div class="col-sm-4 col-sm-offset-4">
					<%= f.submit "Save Changes", class: "form-control btn btn-success create-button"%>

					</div>

				</div>
			<% end %>

		</div>
	</div>
</div>

<script type="text/javascript">
$(document).ready(function(){
    $('.input-group.date').datepicker({
    	format: "dd/mm/yyyy",
    	todayBtn: "linked",
    	autoclose: true
    });
    $('.time').timepicker({
    	 'timeFormat':'H:i',
    	  'scrollDefault': 'now'
   	});
});
</script>
